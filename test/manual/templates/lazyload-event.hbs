<script>

	$(document)
		.on('delayimagesstart', function ( e, images ) {
			console.info('Start');
			console.log(e);
			console.log(images);
		})
		.on('delayimagessuccess', function ( e, images ) {
			console.info('Success');
			console.log(e);
			console.log(images);
		});

	$('img').delayImages({
		method: 'lazyload',
		start: function () {
			console.log('Calling "start" from callback');
		},
		success: function () {
			console.log('Calling "success" from callback');
		}
	});

</script>

